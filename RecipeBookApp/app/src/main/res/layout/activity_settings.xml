<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for SettingsActivity demonstrating Camera, Calendar, Email, SMS, and Sound -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <!-- Button to open camera -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cameraBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:drawableStart="@android:drawable/ic_menu_camera"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Button to add a calendar event -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/calendarBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Calendar Event"
        android:drawableStart="@android:drawable/ic_menu_today"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cameraBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Button to send an email -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/emailBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:drawableStart="@android:drawable/ic_dialog_email"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/calendarBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Button to send an SMS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/smsBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:drawableStart="@android:drawable/ic_dialog_info"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/emailBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
